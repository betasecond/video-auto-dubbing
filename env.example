# 复制为 `.env`（如果你的环境允许使用 dotfile），或直接在系统环境变量里设置这些值。
# Windows PowerShell 示例：
#   Get-Content env.example | ForEach-Object { if ($_ -and $_ -notmatch '^#') { $k,$v=$_.Split('=',2); setx $k $v } }

# 基础设施
POSTGRES_DB=dubbing
POSTGRES_USER=dubbing
POSTGRES_PASSWORD=dubbing123
POSTGRES_PORT=5432

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=videos
# 从宿主机访问预签名URL用（默认即可）
MINIO_PUBLIC_ENDPOINT=localhost:9000

RABBITMQ_USER=rabbitmq
RABBITMQ_PASSWORD=rabbitmq123
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# 服务端口
API_PORT=8080
TTS_PORT=8000
GATEWAY_HTTP_PORT=80

# GLM 翻译（智谱 BigModel）
GLM_API_KEY=your_glm_api_key
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions
GLM_MODEL=glm-4.5

# 火山/豆包 ASR（当前 worker/internal/asr/client.go 仍是占位实现，后续需按官方协议完成真实对接）
VOLCENGINE_ASR_ACCESS_KEY=your_volcengine_access_key
VOLCENGINE_ASR_SECRET_KEY=your_volcengine_secret_key

# TTS：IndexTTS-2（ModelScope）
MODELSCOPE_TOKEN=your_modelscope_token
MODELSCOPE_MODEL_ID=IndexTeam/IndexTTS-2
# modelscope 或 mock（mock 用于本地联调）
TTS_BACKEND=modelscope
STRICT_DURATION=false
MAX_CONCURRENT_REQUESTS=10
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1.0

